<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/doc_listofappointment_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_5dp"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:contentPadding="@dimen/padding_5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_5dp">

            <TextView
                android:id="@+id/textview_doc_listofappointment_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hfjsdhfjsdfhjsdhfjsdhfsdjfhsjdhfdjfhdsjfhsf"
                android:textColor="@color/colorButton"
                android:textSize="@dimen/font_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_doc_listofappointment_Gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_doc_listofappointment_Name"

                android:text="Gender" />

           <!-- <TextView
                android:id="@+id/textview_doc_listofappointment_Age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_doc_listofappointment_Name"
                android:layout_toRightOf="@id/textview_doc_listofappointment_Gender"
                android:drawablePadding="@dimen/padding_5dp"
                android:text="30 years" />-->

            <TextView
                android:id="@+id/textview_doc_listofappointment_Email"
                android:layout_width="@dimen/width_190"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_doc_listofappointment_Gender"
                android:drawableLeft="@drawable/ic_email"
                android:text="abc@gmail.com" />

            <TextView
                android:id="@+id/textview_doc_listofappointment_Contact"
                android:layout_width="@dimen/width_160"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_doc_listofappointment_Email"
                android:drawableLeft="@drawable/ic_mobile"
                android:drawablePadding="@dimen/padding_7dp"
                android:text="1234567890" />


            <TextView
                android:id="@+id/textview_doc_listofappointment_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_doc_listofappointment_Contact"
                android:layout_marginTop="@dimen/padding_3dp"
                android:drawableLeft="@drawable/ic_datetime"
                android:drawablePadding="@dimen/padding_8dp"
                android:text="Date" />

            <TextView
                android:id="@+id/textview_doc_listofappointment_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_doc_listofappointment_Contact"
                android:layout_marginTop="@dimen/padding_3dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_toRightOf="@id/textview_doc_listofappointment_Date"
                android:drawablePadding="@dimen/padding_5dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:text="Time" />

            <Button
                android:id="@+id/button_doc_listofappointment_conform"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_35"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/margin_5dp"
                android:layout_toStartOf="@+id/imagview_doc_listofappointment_reject"
                android:background="@drawable/custom_button"
                android:text="@string/conform"
                android:textColor="@color/colorWhite" />

            <ImageView
                android:id="@+id/imagview_doc_listofappointment_reject"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_35"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_reject" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>