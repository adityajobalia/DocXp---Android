<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_patient_findhospital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_5dp"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:contentPadding="@dimen/padding_5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview_patient_findhospital_Hospitalname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="kjdhjhfjdfjfdjakf"
                android:textColor="@color/colorButton"
                android:textSize="@dimen/font_18" />
            <TextView
                android:id="@+id/textview_patient_findhospital_Hospitallocality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/padding_5dp"
                android:drawableLeft="@drawable/ic_direction"
                android:layout_below="@id/textview_patient_findhospital_Hospitalname"
                android:text="kjdhjhfjdfjfdjakf"
               />


            <ImageView
                android:id="@+id/imageview_patient_hospitaldetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_centerInParent="true"
                android:src="@drawable/update_btn_24" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>