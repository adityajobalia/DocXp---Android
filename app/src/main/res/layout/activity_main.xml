<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.project.docxp.MainActivity">
    <ImageView
        android:layout_width="@dimen/width_96dp"
        android:layout_height="@dimen/width_96dp"
        android:layout_marginTop="@dimen/margin_200dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageview_main_logo"
        android:src="@mipmap/splashicon" />
    <Button
        android:id="@+id/button_main_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageview_main_logo"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_50dp"
        android:background="@drawable/custom_button_event"
        android:text="@string/signin"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="@dimen/font_18" />
    <Button
        android:id="@+id/button_main_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_main_signin"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/custom_button_white_event"
        android:text="@string/signup"
        android:textAllCaps="false"
        android:textColor="@color/colorButton"
        android:textSize="@dimen/font_18" />


</RelativeLayout>
