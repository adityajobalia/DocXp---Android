<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout_main_patient_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.project.docxp.patientfragment.PatientHomeFragment"
    >


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollview_pateint_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/relativelayout_pateint_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/scrollview_pateint_home"
            android:layout_centerHorizontal="true"
            android:scrollbars="vertical">

            <GridView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gridview_patient_home"
                android:horizontalSpacing="2dp"
                android:verticalSpacing="2dp"
                android:numColumns="3"
                android:columnWidth="300dp"
                android:stretchMode="columnWidth"
                android:gravity="center"
                >
            </GridView>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
