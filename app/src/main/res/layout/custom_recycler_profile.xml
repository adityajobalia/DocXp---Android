<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_15dp">

    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_stethoscope" />

    <TextView
        android:id="@+id/profile_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_25dp"
        android:layout_marginRight="@dimen/margin_5dp"
        android:text="@string/password"
        android:textSize="@dimen/font_16" />

    <TextView
        android:id="@+id/profile_content"
        android:layout_width="@dimen/width_150"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_110"
        android:layout_marginRight="@dimen/margin_5dp"
        android:text="abc123" />

    <ImageView
        android:id="@+id/profile_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/padding_3dp"
        android:src="@drawable/update_btn" />
</RelativeLayout>