<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.docxp.GeofenceActivity"
    >

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Geofence"
        android:id="@+id/toolbar_geofence"
        android:background="@color/colorPrimary"
        ></android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/geofence_texview_description"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_5dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:text="@string/geofence_textview"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font_16"
        android:layout_below="@id/toolbar_geofence"
        android:layout_margin="@dimen/margin_10dp"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_geofence"
        android:layout_toRightOf="@id/geofence_texview_description"
        android:id="@+id/togglebtn_geofence"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp"/>

</RelativeLayout>
