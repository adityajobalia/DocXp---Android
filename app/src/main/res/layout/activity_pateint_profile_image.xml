<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_3dp"
    android:background="#000000"
    tools:context="com.project.docxp.PatientProfileImageActivity">


    <ImageView
        android:id="@+id/imageview_pateint_profile_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/margin_80dp"

        />


    <Button
        android:id="@+id/button_pateint_profile_image_select"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/padding_3dp"
        android:text="@string/select"
        android:background="@color/colorWhite"
        android:textSize="@dimen/font_18"

        />



    <Button
        android:id="@+id/button_pateint_profile_image_cancle"
        android:layout_width="1175dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_3dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:layout_marginStart="@dimen/padding_3dp"
        android:layout_toRightOf="@id/button_pateint_profile_image_select"
        android:text="@string/cancle"
        android:textSize="@dimen/font_18"
       />
</RelativeLayout>
